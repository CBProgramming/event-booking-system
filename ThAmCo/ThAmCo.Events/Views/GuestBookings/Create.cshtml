@model ThAmCo.Events.Models.GuestBookings.GuestBookingCreateVM

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>GuestBooking</h4>
<h5>@ViewData["GuestBookingMessage"]</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="@Model.Customer.Id" name="CustomerId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer" class="control-label"></label>
                <input asp-for="Customer.FullName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Venues" class="control-label"></label>
                @Html.DropDownList("EventId", Model.Venues)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
