<input type="hidden" asp-for="@Model.Event.Id" name="EventId" />

@foreach (var item in Model.Customers)
{

    <form asp-action="SaveEventGuests">
        <div class="container">
            <div class="row">
                <input type="hidden" asp-for="@item.Id" name="CustomerId" />
                <div class="col-md-4">
                    @Html.DisplayFor(modelItem => item.FullName)
                </div>
                <div class="col-md-1 form-group">
                    <input asp-for="@item.Attended" data-customerid="@item.Id" name="Attended" onChange="updateAttend(this) " class="form-control" />
                </div>
                <div class="col-md-1">
                    @Html.ActionLink("Delete", "Delete", new { customerId = item.Id, eventId = Model.Event.Id })
                </div>
            </div>
        </div>
    </form>
}



