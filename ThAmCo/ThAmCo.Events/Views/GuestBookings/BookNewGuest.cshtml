<div class="row">
    <div class="col-md-4">
        <form asp-action="BookNewGuest">
            <input type="hidden" asp-for="@Model.Event.Id" name="EventId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event" class="control-label"></label>
                <input asp-for="Event.Title" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Customers" class="control-label"></label>
                @Html.DropDownList("CustomerId", Model.Customers)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
