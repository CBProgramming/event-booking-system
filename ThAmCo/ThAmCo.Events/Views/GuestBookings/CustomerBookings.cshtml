@model ThAmCo.Events.Models.CustomerEvents.CustomerEventsVM

@{
    ViewData["Title"] = "CustomerBookings";
}

<h2>@Html.DisplayFor(model => model.Customer.FirstName) @Html.DisplayFor(model => model.Customer.Surname)'s Bookings</h2>
<h4>@Html.DisplayNameFor(model => model.Customer.Email): @Html.DisplayFor(model => model.Customer.Email)</h4>

<br>
<p>
    @Html.ActionLink("Book new event", "Create", new { customerId = Model.Customer.Id })
</p>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            @Html.DisplayNameFor(model => model.Events.FirstOrDefault().Title)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Events.FirstOrDefault().Date)
        </div>
        <div class="col-md-2">
            @Html.DisplayNameFor(model => model.Events.FirstOrDefault().Duration)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.Events.FirstOrDefault().TypeId)
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(model => model.Events.FirstOrDefault().Attended)
        </div>
    </div>
</div>

    @foreach (var item in Model.Events)
    {

<form asp-action="Save">
    <div class="container">
        <div class="row">
            <input type="hidden" asp-for="@item.EventId" name="EventId" />
            <input type="hidden" asp-for="@Model.Customer.Id" name="CustomerId" />
            <div class="col-md-4">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(modelItem => item.Date)
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(modelItem => item.Duration)
            </div>
            <div class="col-md-1">
                @Html.DisplayFor(modelItem => item.TypeId)
            </div>
            <div class="col-md-1 form-group">
                <input asp-for="@item.Attended" name="Attended" onChange="this.form.submit() " class="form-control" />
            </div>
            <div class="col-md-1">
                @Html.ActionLink("Delete", "Delete", new { eventId = item.EventId, customerId = Model.Customer.Id })
            </div>
        </div>
    </div>
</form>
    }

