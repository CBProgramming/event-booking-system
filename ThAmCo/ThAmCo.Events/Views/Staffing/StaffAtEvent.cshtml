@model ThAmCo.Events.Models.Staffing.BookNewStaffVM

@{
    ViewData["Title"] = "Index";
}

<h1>Staffing for '@Html.DisplayFor(model => model.EventTitle)'</h1>
<h2>Total staff: @Model.Staff.Count()</h2>
<h3>@ViewData["ErrorMessage"]</h3>

@if (Model.FirstAiderPresent == false)
{
    <h3>No first aider present.  Please allocate staff trained in first aid to event.</h3>
}
@if (Model.NeededStaff > 0)
{
    <h3>Not enough staff allocated to event.  Please add @Model.NeededStaff more staff</h3>
}

<p>
    @Html.ActionLink("Add Staff", "Create", new { eventId = Model.EventId })
</p>

@if (@Model.Staff.Count() != 0)
{
    <br>
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Staff.FirstOrDefault().FullName)
            </div>
            <div class="col-sm-1">
                @Html.DisplayNameFor(model => model.Staff.FirstOrDefault().FirstAider)
            </div>
            <div class="col-sm-1">
                @Html.DisplayNameFor(model => model.Staff.FirstOrDefault().Attending)
            </div>
        </div>
    </div>
}


<input type="hidden" asp-for="@Model.EventId" name="EventId" />

@foreach (var item in Model.Staff)
{


    <div class="container">
        <div class="row">
            <input type="hidden" asp-for="@item.Id" name="CustomerId" />
            <div class="col-sm-2">
                @Html.DisplayFor(modelItem => item.FullName)
            </div>
            <div class="col-sm-1">
                @Html.DisplayFor(modelItem => item.FirstAider)
            </div>
            <div class="col-sm-1">
                <input asp-for="@item.Attending" data-staffid="@item.Id" onChange=updateAttend(this) />
            </div>
        </div>
    </div>

}
<div>
    <a asp-action="Index">Back to Events</a>
</div>

<script type="text/javascript">

    function updateAttend(checkbox) {
        var staffId = $(checkbox).data("staffid");
        var evId = $("#EventId").val();
        var checked = $(checkbox).is(":checked");

        var data =
        {
            "StaffId": staffId,
            "EventId": evId,
            "Attended": checked
        };

        $.ajax({

            url: 'http://localhost:22263/Staffing/Create',
            type: 'POST',
            datatype: 'json',
            data: data,
            success: function () {
            },
            error: function () {
                alert("something went wrong");
            }
        });
    }

</script>