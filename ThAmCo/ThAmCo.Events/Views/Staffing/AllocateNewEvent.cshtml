@model ThAmCo.Events.Models.Staffing.AllocateNewEventVM

@{
    ViewData["Title"] = "AllocateNewEvent";
}

<h2>AllocateNewEvent</h2>

<hr />
<div class="row">
    <div class="col-md-4">
            <input type="hidden" asp-for="@Model.Staff.Id" name="StaffId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Staff" class="control-label"></label>
                <input asp-for="Staff.FullName" class="form-control" readonly />
            </div>
    </div>
</div>

<input type="hidden" asp-for="@Model.Staff.Id" name="StaffId" />

@foreach (var item in Model.Venues)
{
    <div class="container">
        <div class="row">
            <input type="hidden" asp-for="@item.Id" name="EventId" />
            <div class="col-sm-2">
                @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div class="col-sm-1">
                @Html.DisplayFor(modelItem => item.Date)
            </div>
            <div class="col-sm-1">
                <input asp-for="@item.Allocated" data-eventid="@item.Id" onChange=updateAttend(this) />
            </div>
        </div>
    </div>

}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">

    function updateAttend(checkbox) {
        var eventId = $(checkbox).data("eventid");
        var staffId = $("#Staff_Id").val();
        var checked = $(checkbox).is(":checked");

        var data =
        {
            "StaffId": staffId,
            "EventId": eventId,
            "Attended": checked
        };

        $.ajax({

            url: 'http://localhost:22263/Staffing/Create',
            type: 'POST',
            datatype: 'json',
            data: data,
            success: function () {
            },
            error: function () {
                alert("something went wrong");
            }
        });
    }

</script>

