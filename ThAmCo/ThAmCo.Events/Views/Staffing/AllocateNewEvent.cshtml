@model ThAmCo.Events.Models.Staffing.AllocateNewEventVM

@{
    ViewData["Title"] = "AllocateNewEvent";
}

<h2>AllocateNewEvent</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AllocateNewEvent">
            <input type="hidden" asp-for="@Model.Staff.Id" name="StaffId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Staff" class="control-label"></label>
                <input asp-for="Staff.FullName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Venues" class="control-label"></label>
                @Html.DropDownList("EventId", Model.Venues)
            </div>
            <div class="form-group">
                <input type="submit" value="BookNewGuest" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

