@model ThAmCo.Events.Models.Events.EventDetailsVM


<h2>Event Details</h2>


    <div>
        <a asp-action="Edit" asp-route-id="@Model.Event.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3>Event</h3>
                <div class="col-sm-3">
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Event.Title):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Event.Date):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Event.Duration):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Event.Type):</strong>
                    </div>
                </div>
                <div class="col-sm-9">
                    <div>
                        @Html.DisplayFor(model => model.Event.Title)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Event.Date)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Event.Duration)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Event.Type)
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <h3>Venue</h3>
                <div class="col-sm-3">
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Event.VenueName):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Event.VenueCapacity):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Event.VenueDescription):</strong>
                    </div>
                </div>
                <div class="col-sm-9">
                    <div>
                        @Html.DisplayFor(model => model.Event.VenueName)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Event.VenueCapacity)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Event.VenueDescription)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3>Menu</h3>
                <div class="col-sm-2">
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Menu.Name):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Menu.Starter):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Menu.Main):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Menu.Dessert):</strong>
                    </div>
                </div>
                <div class="col-sm-10">
                    <div>
                        @Html.DisplayFor(model => model.Menu.Name)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Menu.Starter)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Menu.Main)
                    </div>
                    <div>
                        @Html.DisplayFor(model => model.Menu.Dessert)
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <h3>Costing</h3>
                <div class="col-sm-3">
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.Menu.CostPerHead):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.MenuCost):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.VenueCost):</strong>
                    </div>
                    <div>
                        <strong>@Html.DisplayNameFor(model => model.TotalCost):</strong>
                    </div>
                </div>
                <div class="col-sm-9">
                    <div>
                        £@((Model.Menu.CostPerHead).ToString("0.00"))
                    </div>
                    <div>
                        £@((Model.MenuCost).ToString("0.00"))
                    </div>
                    <div>
                        £@((Model.VenueCost).ToString("0.00"))
                    </div>

                    <div>
                        £@((Model.TotalCost).ToString("0.00"))
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3>@Model.Customers.Count Guests</h3>

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().Surname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Customers.FirstOrDefault().Email)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Customers)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-sm-6">
                <h3>@Model.Staff.Count Staff</h3>

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Staff.FirstOrDefault().Surname)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Staff.FirstOrDefault().FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Staff.FirstOrDefault().Email)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Staff)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>





